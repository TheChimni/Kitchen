<section id="main" class="container">
  <article class='blogPost'>
    <h2><%= @post.title %></h2>
    <div class='blogContent'><%= md_to_html @post.content %></div>
    <div>
      <%= link_to 'Back to blog', blog_posts_path %>
      <%= link_to 'Edit', edit_blog_post_path(@post) if user_signed_in? %>
    </div>
    <div class='blogDate'><%= time_ago_in_words @post.published_at %> ago</div>
    <div class='blogComments'>
      Comments go here...
    </div>
  </article>
</section>
