<ul class='recipeList'>
  <% @recipes.each_with_index do |recipe, index| %>
    <li class="<%= (index + 1) % 3 == 0 ? 'end_of_line' : '' %>">
      <%= render :partial => 'recipe', :locals => { :recipe => recipe } %>
    </li>
  <% end %>
</ul>
<div class='clear'></div>
<nav class='pagination'>
  <span class="next">
    <%= link_to_next_page @recipes, 'More', :remote => true %>
  </span>
</nav>
