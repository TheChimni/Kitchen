<div id='carousel'>
  <div id='carouselItems'>
    <!-- TODO: We will reuse this to display list of recipes -->
    <% @recipes.each do |recipe| %>
      <div class='carouselItem' data-id='1'>
        <div class='content'>
          <h2 class='recipeTitle'><%= recipe.title %></h2>
          <div class='images'>
            <div class='recipeImage'><%= image_tag recipe.picture.url(:medium) %></div>
            <div class='recipeSecondaryImage'><%= image_tag recipe.picture.url(:small) %></div>
          </div>
          <p class='recipeSynopsis'><%= recipe.synopsis %></p>
          <%= link_to 'tell me more', recipe_path(recipe), :class => 'recipeMoreLink' %>
        </div>
      </div>
    <% end %>
  </div>
</div>



